{
  "name": "Y2S",
  "description": "Recommend music on Spotify based on what's currently playing on Youtube.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["/js/ytButton.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "identity", "notifications"],
  "options_page": "/html/options.html",
  "action": {
    "default_popup": "/html/popup.html",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}